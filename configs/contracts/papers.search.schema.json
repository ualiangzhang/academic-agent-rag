{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "papers.search",
  "type": "object",
  "properties": {
    "query": {"type": "string", "minLength": 1},
    "sources": {"type": "array", "items": {"enum": ["arxiv", "crossref", "semanticscholar"]}},
    "max_results": {"type": "integer", "minimum": 1, "maximum": 50, "default": 10},
    "trace_id": {"type": "string"},
    "run_id": {"type": "string"}
  },
  "required": ["query"],
  "additionalProperties": false,
  "x-errors": {
    "codes": [
      {"code": "TIMEOUT", "retryable": true},
      {"code": "UPSTREAM_429", "retryable": true},
      {"code": "INVALID_ARGUMENT", "retryable": false}
    ],
    "timeout_ms": 12000,
    "rate_limit_rps": 2,
    "idempotent": true
  },
  "x-output": {
    "type": "object",
    "properties": {
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {"type": "string"},
            "url": {"type": "string", "format": "uri"},
            "pdf_url": {"type": "string", "format": "uri"},
            "source": {"enum": ["arxiv", "crossref", "semanticscholar"]},
            "published": {"type": "string"}
          },
          "required": ["title", "url", "source"]
        }
      },
      "trace_id": {"type": "string"},
      "run_id": {"type": "string"}
    },
    "required": ["items"]
  }
}
